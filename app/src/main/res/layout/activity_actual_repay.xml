<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pool"
    tools:context="MainActivity">

    <EditText
        android:id="@+id/amount_et"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:background="@drawable/rounded_icon"
        android:hint="Amount"
        android:inputType="number"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.874" />

    <EditText
        android:id="@+id/name"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/rounded_icon"
        android:hint="Name"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/upi_id"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/upi_id"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_below="@id/name"
        android:layout_marginBottom="36dp"
        android:background="@drawable/rounded_icon"
        android:hint="UPI ID"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/note"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/note"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_below="@id/upi_id"
        android:layout_marginBottom="36dp"
        android:background="@drawable/rounded_icon"
        android:hint="Note"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/send"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/send"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:background="@drawable/rounded_button"
        android:layout_below="@id/note"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="96dp"
        android:text="PAY BY UPI"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="190dp"
        android:background="@drawable/givda"
        app:layout_constraintBottom_toTopOf="@+id/amount_et"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="105dp" />


</androidx.constraintlayout.widget.ConstraintLayout>
